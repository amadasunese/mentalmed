<%- include('header') -%>

<h1>Doctor Dashboard</h1>

<h2>Doctor Information</h2>
<ul>
  <li>Name: Dr. <%= doctor.first_name %> <%= doctor.last_name %> </li>
  <li>Email: <%= doctor.email %></li>
</ul>

<button onclick="showUpdateDoctorInfo()">Update Information</button>

<h2>Upcoming Appointments</h2>

<% if (appointments) { %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Time</th>
        <th>Patient Name</th>
        <th>Email</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% for (const appointment of appointments) { %>
        <tr>
          <td><%= appointment.appointment_date %></td>
          <td><%= appointment.appointment_time %></td>
          <td><%= appointment.patient_first_name %> <%= appointment.patient_last_name %></td>
          <td><%= appointment.patient_email %></td>
          <td>
            <a href="/doctor/appointments/accept/<%= appointment.id %>">Accept</a>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
<% } else { %>
  <p>No upcoming appointments at the moment.</p>
<% } %>

<a href="/appointments">View All Appointments</a>
<a href="/assessments">View Patient Assessments</a>
<a href="/virtual-conversation/:patientId">Start Virtual Conversation</a>

